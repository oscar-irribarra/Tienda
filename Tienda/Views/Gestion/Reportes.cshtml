
@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<section class="content">
   
    <ul class="nav nav-pills nav-justified box">
        <li role="presentation" id="boton1"><a >Productos VA</a></li>
        <li role="presentation" id="boton2"><a >Ventas Local VS Online</a></li>
        <li role="presentation" id="boton3"><a >Ventas Vs Arriendos</a></li> 
    </ul>
        
    <div id="chartdiv"></div>

</section>
@section scripts
{
    <style>
        #chartdiv {
            width: 100%;
            height: 500px;
        }
        .amcharts-export-menu-top-right {
            top: 10px;
            right: 0;
        }
        .amcharts-chart-div a {
            display: none !important;
        }
    </style>
    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/serial.js"></script>
    <script src="https://www.amcharts.com/lib/3/pie.js"></script>
    <script src="https://www.amcharts.com/lib/3/plugins/export/export.min.js"></script>
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("a[title='JavaScript charts']").remove();
            GetReporte(1);
            $('#boton1').on('click', function () {
                $("li").removeClass("active");
                $(this).addClass("active");
                GetReporte(1);
            });
            $('#boton2').on('click', function () {
                $("li").removeClass("active");
                $(this).addClass("active");
                GetReporte(2);
            });
            $('#boton3').on('click', function () {
                $("li").removeClass("active");
                $(this).addClass("active");
                GetReporte(3);
            });
        });
      
        function GetReporte(a)
        {
            $.ajax({
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                url: '@Url.Action("Get")',
                data: "{ 'a':' " + a + "' }",
                success: function (data) {
                    switch (a) {
                        case 1:
                            Reporte_CDP_V_A(data);
                            break;
                        case 2:
                            Reporte_V_OnlineLocal(data);
                            break;
                        case 3:
                            Reporte_VA(data);
                            break;
                        default:
                            Reporte_V_OnlineLocal(data);
                            break;
                    }
                },
                error: function (data) {
                    alert("Ocurrio un Error, Intente nuevamente");
                }
            });
        }

        function Reporte_CDP_V_A(data) {
            var chart = AmCharts.makeChart("chartdiv", {
                "type": "serial",
                "theme": "light",
                "titles": [{
                    "text": "Productos"
                }, {
                    "text": "Total de productos en ventas",
                    "bold": false
                }],
                "marginRight": 70,
                "dataProvider": data,
                "startDuration": 1,
                "graphs": [{
                    "balloonText": "<b>[[category]]: [[value]]</b>",
                    "fillColorsField": "color",
                    "fillAlphas": 0.9,
                    "lineAlpha": 0.2,
                    "type": "column",
                    "valueField": "entero1"
                }],
                "valueAxes": [{
                    "title": "Cantidad"
                }],
                "chartCursor": {
                    "categoryBalloonEnabled": false,
                    "cursorAlpha": 0,
                    "zoomable": false
                },
                "categoryField": "nombre",
                "categoryAxis": {
                    "gridPosition": "start",
                    "labelRotation": 45
                },
                "export": {
                    "enabled": true
                }

            });
        }
        function Reporte_V_OnlineLocal(data)
        {
            var chart = AmCharts.makeChart("chartdiv", {
                "type": "pie",
                "titles": [{
                    "text": "Ventas"
                }, {
                    "text": "Porcentaje de Ventas Local y Online",
                    "bold": false
                }],
                "theme": "light",
                "dataProvider": data,
                "valueField": "valor",
                "titleField": "nombre",
                "outlineAlpha": 0.4,
                "depth3D": 15,
                "balloonText": "[[title]]<br><span style='font-size:14px'><b>[[value]]</b> ([[percents]]%)</span>",
                "angle": 30,
                "export": {
                    "enabled": true
                }
            });
        }

        function Reporte_VA(data) {
            var chart = AmCharts.makeChart("chartdiv", {
                "type": "pie",
                "theme": "light",
                "titles": [{
                    "text": "Ventas | Arriendos"
                }, {
                    "text": "Porcentaje de Ventas Vs Arriendos",
                    "bold": false
                }],
                "dataProvider": data,
                "valueField": "valor",
                "titleField": "nombre",
                "outlineAlpha": 0.4,
                "depth3D": 15,
                "balloonText": "[[title]]<br><span style='font-size:14px'><b>[[value]]</b> ([[percents]]%)</span>",
                "angle": 30,
                "export": {
                    "enabled": true
                }
            });
        }

        function Reporte2(data)
        {
            var chart = AmCharts.makeChart("chartdiv", {
                "theme": "light",
                "type": "serial",
                "dataProvider": data,
                "valueAxes": [{
                    "stackType": "3d",
                    "unit": "%",
                    "position": "left",
                    "title": "GDP growth rate",
                }],
                "startDuration": 1,
                "graphs": [{
                    "balloonText": "GDP grow in [[category]] (2004): <b>[[value]]</b>",
                    "fillAlphas": 0.9,
                    "lineAlpha": 0.2,
                    "title": "2004",
                    "type": "column",
                    "valueField": "entero2"
                }, {
                    "balloonText": "GDP grow in [[category]] (2005): <b>[[value]]</b>",
                    "fillAlphas": 0.9,
                    "lineAlpha": 0.2,
                    "title": "2005",
                    "type": "column",
                    "valueField": "entero1"
                }],
                "plotAreaFillAlphas": 0.1,
                "depth3D": 17,
                "angle": 41,
                "categoryField": "nombre",
                "categoryAxis": {
                    "gridPosition": "start"
                },
                "export": {
                    "enabled": true
                }
            });
            jQuery('.chart-input').off().on('input change', function () {
                var property = jQuery(this).data('property');
                var target = chart;
                chart.startDuration = 0;

                if (property == 'topRadius') {
                    target = chart.graphs[0];
                    if (this.value == 0) {
                        this.value = undefined;
                    }
                }

                target[property] = this.value;
                chart.validateNow();
            });
        }
    </script>
}