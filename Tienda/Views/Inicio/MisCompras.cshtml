@model IEnumerable<Tienda.Models.Venta>

@{
    ViewBag.Title = "Ms Compras";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Compras</h2>
<div class="row">
    <div class="col-md-12">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>
                        <asp:Label ID="lb_numeropad" runat="server" Text=""></asp:Label>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cliente.Rut)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Estado.Nombre)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Fecha)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EsOnline)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cliente.Rut)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estado.Nombre)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fecha)
                                        </td>
                                        <td>
                                            @if (item.EsOnline)
                                            {
                                                <label>Online</label>
                                            }
                                            else
                                            {
                                                <label>Local</label>
                                            }
                                        </td>
                                        <td>
                                            @Html.ActionLink("Detalles", "Detallecompras", new { id = item.Id },new { @class = "btn btn-default" })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @Html.ActionLink("Volver", "Catalogo", new { }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>

    </div>
</div>

