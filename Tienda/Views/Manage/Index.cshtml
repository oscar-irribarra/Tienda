@model Tienda.Models.IndexViewModel
@{
    ViewBag.Title = "Gestionar";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";

}
<section class="content">
    <ol class="breadcrumb box">         
        <li><a href="@Url.Action("Index","Gestion")">Inicio</a></li>
        <li class="active">Perfil</li>
    </ol>
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <div class="box-title">
                        Usuario: <b> @Tienda.Helpers.IdentityExtensions.GetDisplayName(User.Identity) </b>
                    </div>
                </div>
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Correo:</dt>
                        <dd>
                            @User.Identity.Name
                        </dd>
                        <dt>Contraseña:</dt>
                        <dd>
                            @if (Model.HasPassword)
                            {
                                @Html.ActionLink("Cambiar Contraseña", "ChangePassword")
                            }
                            else
                            {
                                @Html.ActionLink("Crear", "SetPassword")
                            }
                        </dd>

                    </dl>
                </div>
                <div class="box-footer">
                    @Html.ActionLink("Modificar", "Update","Account", null, new { @class = "btn btn-default" })
                    @Html.ActionLink("Volver", "Index","Gestion", null, new { @class = "btn btn-default pull-right" })
                </div>

            </div>
        </div>
    </div>
</section>

