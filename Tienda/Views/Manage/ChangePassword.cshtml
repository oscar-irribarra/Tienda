@model Tienda.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";

}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <ol class="breadcrumb box">
            <li><a href="#">Home</a></li>
            <li><a href="@Url.Action("Index","Categorias")">Categorias</a></li>
            <li class="active">Formulario</li>
        </ol>
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    Formulario
                </h3>
            </div>
            <div class="form-horizontal">
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                  
                    <div class="form-group">
                        @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" } )
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="box-footer">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                    @Html.ActionLink("Volver", "Index","Manage", null, new { @class = "btn btn-default pull-right" })
                </div>
            </div>
        </div>
    </section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
