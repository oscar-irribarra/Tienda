@model Tienda.ViewModels.VentaViewModel
@{
    ViewBag.Title = "Formulario";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

@using (Html.BeginForm("Guardar", "Ventas", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <ol class="breadcrumb box">
            <li><a href="@Url.Action("Index","Gestion")">Inicio</a></li>
            <li><a href="@Url.Action("Index","Ventas")">Ventas</a></li>
            <li class="active">Formulario</li>
        </ol>
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    Formulario
                </h3>
            </div>
            <div class="form-horizontal">
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class=" col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Rut, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Rut, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Rut, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label(" ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.CheckBoxFor(m => m.Ispublica) Venta a publico?
                                </div>
                            </div>
                        </div>
                    </div>
                    
                  
                </div>
                <div class="box-footer">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default pull-right" })
                </div>
            </div>
        </div>
    </section>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#Rut").attr("Required", true);
            $("#Nombre").attr("Required", true);
            $("#Apellido").attr("Required", true);
            $("#Email").attr("Required", true);
            $("#Telefono").attr("Required", true);   
            ComprobarCheckbox();
        });
        function ComprobarCheckbox() {
            $("#Ispublica").change(function () {
                if ($('#Ispublica').is(":checked")) {
                    $("#Rut").attr("Required", false);
                    $("#Nombre").attr("Required", false);
                    $("#Apellido").attr("Required", false);
                    $("#Email").attr("Required", false);
                    $("#Telefono").attr("Required", false);                  
                    $("#Rut").prop('disabled', true);
                    $("#Nombre").prop('disabled', true);
                    $("#Apellido").prop('disabled', true);
                    $("#Email").prop('disabled', true);
                    $("#Telefono").prop('disabled', true);
                    $('span[for^="Rut"]').remove();
                } else {
                    $("#Rut").attr("Required", true);
                    $("#Nombre").attr("Required", true);
                    $("#Apellido").attr("Required", true);
                    $("#Email").attr("Required", true);
                    $("#Telefono").attr("Required", true);  
                    $("#Rut").prop('disabled', false);
                    $("#Nombre").prop('disabled', false);
                    $("#Apellido").prop('disabled', false);
                    $("#Email").prop('disabled', false);
                    $("#Telefono").prop('disabled', false);
                }
            });
        }
    </script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/Scripts/error-jquery.js"></script>
}

