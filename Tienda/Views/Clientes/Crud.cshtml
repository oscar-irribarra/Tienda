@model Tienda.Models.Cliente

@{
    ViewBag.Title = "Formulario";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

@using (Html.BeginForm("Guardar", "Clientes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <ol class="breadcrumb box">
            <li><a href="@Url.Action("Index","Gestion")">Inicio</a></li>
            <li><a href="@Url.Action("Index","Clientes")">Clientes</a></li>
            <li class="active">Formulario</li>
        </ol>
